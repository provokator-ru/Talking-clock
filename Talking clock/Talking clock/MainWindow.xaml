<Window x:Class="Talking_clock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Talking_clock"
        mc:Ignorable="d"
        Title="Talking clock" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Border Margin="10, 10, 10, 10" BorderBrush="Black" BorderThickness="3">
            <Label x:Name="label" Content="00:00:00" FontSize="100" Padding="70" FontFamily="Arial" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <Button x:Name="Voice" Background="#008b8b	" Foreground="White" Content="Воспроизвести время" Width="200" Height="50"  Click="Click" Margin="296,279,296,90" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" FontFamily="Arial" ></Button>
        
    </Grid>
</Window>
